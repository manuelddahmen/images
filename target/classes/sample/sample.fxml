<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" hgap="10" nodeOrientation="LEFT_TO_RIGHT" vgap="10" xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>

        <RowConstraints/>
    </rowConstraints>
    <children>
        <SplitPane dividerPositions="0.5" GridPane.rowSpan="2">
            <items>
                <AnchorPane prefHeight="200.0" prefWidth="200.0">
                    <children>
                        <ImageView/>
                    </children>
                </AnchorPane>
                <AnchorPane>
                    <children>
                        <ToolBar prefHeight="40.0" prefWidth="200.0">
                            <items>
                                <Button mnemonicParsing="false" text="Button"/>
                                <MenuButton mnemonicParsing="false" text="MenuButton">
                                    <items>
                                        <MenuItem mnemonicParsing="false" text="Action 1"/>
                                        <MenuItem mnemonicParsing="false" text="Action 2"/>
                                    </items>
                                    <graphic>
                                        <ChoiceBox prefWidth="150.0"/>
                                    </graphic>
                                </MenuButton>
                            </items>
                        </ToolBar>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</GridPane>
